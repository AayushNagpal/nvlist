
@@

while true do
    clearText()

    local selected = choice("Buttons", "GUI Customization", "Sub Screens", "Panels and Viewports", "Return")
    if selected == 1 then
        call("gui/01-buttons")
    elseif selected == 2 then
        call("gui/02-custom-screens")
    elseif selected == 3 then
        call("gui/03-sub-screens")
    elseif selected == 4 then
        call("gui/04-panels-viewports")
    else
        break
    end
end

clearText()

