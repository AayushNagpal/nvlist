
@@

while true do
    clearText()

    local selected = choice("Buttons", "Built-in Special Screens", "Buttons in the Text Box", "Sub Screens", "Return")
    if selected == 1 then
        call("gui/01-buttons")
    elseif selected == 2 then
        call("gui/02-special-screens")
    elseif selected == 3 then
        call("gui/03-textbox-buttons")
    elseif selected == 4 then
        call("gui/04-sub-screens")
    else
        break
    end
end

clearText()

